<%
    # TODO Clean this up its everywhere
  symbol = fetch_crypto_asset(:symbol)
%>
<div class="container posting">
  <div class="row">
    <div class="col-8 posting__main">
      <p>
        POSTED  <%= @posting.updated_at.strftime("%d %b").upcase %>
      </p>
      <p>
        <h1> <%= @posting.title %> </h1>
      </p>
      <div class="posting__labels">
        <span class="posting__label <%= "#{symbol}_color" %>">
          <%= @posting.posting_type %>
        </span>
        <span class="posting__label <%= "#{symbol}_color" %>">
          <%= @posting.posting_type %>
          <%= @posting.category %>
        </span>
        <span class="posting__label <%= "#{symbol}_color" %>">
          <%= @posting.regional_restrictions %>
        </span>
      </div>
      <div class="posting__content">
        <%= @posting.content %>
      </div>
      <!-- TODO: DRY UP THIS BUTTON LOGIC -->
      <div class="posting__button">
        <% if @posting.apply_type == "url" %>
          <%= button_to "Apply For This Position",
                                @posting.how_to_apply,
                                method: :get,
                                class: "btn btn-primary posting__apply-button #{symbol}_color" %>
        <% else %>
          <%= mail_to @posting.how_to_apply,
                                "Apply For This Position",
                                class: "btn btn-primary posting__apply-button #{symbol}_color" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
